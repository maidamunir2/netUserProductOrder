
@model LoginRegistrationInMVCwithDatabase.ViewModel.Register
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <!--Made with love by Maida Munir -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" >
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"  >
    <!--Custom styles-->
    <link href="~/Content/css/Styles.css" rel="stylesheet" />
</head>
<style>
    .card {
        height: 500px;
    }
</style>
<body>
    <div class="container" >
        <div class="d-flex justify-content-center" style="margin-top:100px">
            <div class="card">
                <div class="card-header">
                    <h3>Register</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("SaveRegisterDetails", "Account"))
                    {
                        <div style="color:red;">@Html.ValidationSummary()</div>
                        <div class="input-group form-group">
                            <!--Show details are saved successfully message-->
                            <div class="col-lg-12" >@ViewBag.Message</div>
                        </div><br />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <div class="col-lg-10">@Html.TextBoxFor(a => a.FirstName, new { placeholder = "First Name", @class = "form-control" })</div>
                        </div><br />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <div class="col-lg-10">@Html.TextBoxFor(a => a.LastName, new { placeholder = "Last Name", @class = "form-control" })</div>
                        </div><br />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <div class="col-lg-10">@Html.TextBoxFor(a => a.Email, new { placeholder = "Email", @class = "form-control" })</div>
                        </div><br />
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <div class="col-lg-10">@Html.TextBoxFor(a => a.Password, new { placeholder = "Password", @class = "form-control", type = "Password" })</div>
                        </div><br />
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn float-right login_btn">
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

</body>
</html>