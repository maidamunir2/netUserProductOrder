@using LoginRegistrationInMVCwithDatabase.ViewModel
@{
    Layout = null;
}

<!--Bootsrap 4 CDN-->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<!--Fontawesome CDN-->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<!--Custom styles-->
<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .embed-responsive .card-img-top {
        object-fit: cover;
    }
    .container {
        margin-top: 50px;
    }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">

    <div class="top-header">

        <ul class="pull-right m-none">
            <li>

                @if (Request.IsAuthenticated)
                {

                    @Html.ActionLink("Cart", "AddToCart", "Cart")
                    @Html.ActionLink("Home", "Index", "Account")
                    @Html.ActionLink("Log Out", "Logout", "Account")

                }
                else
                {

                    @Html.ActionLink("Login", "Login", "Account")
                }
            </li>
            <li>
                @if (!Request.IsAuthenticated)
                {
                    @Html.ActionLink("Register", "Register", "Account")
                }

            </li>
        </ul>
    </div>
</div>


<div class="container body-content">


    @if (Request.IsAuthenticated)
    {

        <!--Cart Start-->




        <h3>My Basket</h3>

        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        Item
                    </div>
                    <div class="col-sm-2 text-center">
                        Unit Price
                    </div>
                    <div class="col-sm-2 text-center">
                        Quantity
                    </div>
                    <div class="col-sm-2">
                        <span class="pull-right">
                            Subtotal
                        </span>
                    </div>
                </div>
            </div>

            <div class="card-body">
                @if (Session["cart"] != null)
                {
                    foreach (Item item in (List<Item>)Session["cart"])
                    {
                        <div class="row row-center">
                            <div class="col-sm-2">
                                <img alt="@item.Product.Name" class="card-img-top embed-responsive-item"
                                     src="@Url.Content(item.Product.Image)" />
                            </div>
                            <input type="hidden" name="productId" value="012" />
                            <div class="col-sm-4">@item.Product.Name</div>
                            <div class="col-sm-2 text-center">@item.Product.Price</div>
                            <div class="col-sm-2 text-center">
                                <div class="input-group">
                                    <button type="button" class="btn btn-light">
                                        <span class="fa fa-minus"></span>
                                    </button>
                                    <input type="text" value="@item.Quantity"
                                           class="form-control text-center quantity" />

                                    <button type="button" class="btn btn-light">
                                        <span class="fa fa-plus"></span>
                                    </button>

                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="pull-right">
                                    <span class="pull-right" subtotal>
                                        @((item.Quantity * item.Product.Price))
                                    </span>
                                </div>
                            </div>
                        </div>
                        <br />
                        
                    }

                }

            </div>
         
        </div>

        <br />

        <div class="row">
            <div class="col-sm-12">
                <div class="pull-right">
                    <a class="btn btn-success" href="/">
                        Add More Products
                    </a>
                   
                </div>
            </div>
        </div>
        <!--Cart End-->

    }

    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

